@model EmployeeManagement.Models.Identity.IdentityModelDTO

<div class="text-center">
    <h1>Log In</h1>

    <form method="post" asp-controller="Identity" asp-action="SupervisorLoginPost">
        @{
            if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <h3>@Model.ErrorMessage</h3>
            }
        }
        <table>
            <tr>
                <td>E-Mail:</td>
                <td><input asp-for="EMail" type="email" id="eMail" name="EMail" /></td>
            </tr>
            <tr>
                <td>Password:</td>
                <td><input asp-for="Password" type="password" id="password" name="Password" /></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <button class="btn btn-primary" type="submit" value="Submit" />
                    Login
                </td>
            </tr>
        </table>
    </form>

</div>