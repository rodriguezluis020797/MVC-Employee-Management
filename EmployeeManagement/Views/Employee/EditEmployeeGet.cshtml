@model EmployeeManagement.Models.DTOModels.EmployeeModelDTO
<div class="text-center">

    <h1>Edit Employee</h1>
    <h2>@Model.FullName</h2>

    <form method="post" asp-controller="Employee" asp-action="EditEmployeePost">
        <input id="employeeId" asp-for="@Model.EmployeeId" type="hidden" value="@Model.EmployeeId" />
        <input id="supervisorId" asp-for="@Model.SupervisorId" type="hidden" value="@Model.SupervisorId" />
        @{
            if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <h3>@Model.ErrorMessage</h3>
            }
        }
        <table>
            <tr>
                <td>First Name:</td>
                <td><input asp-for="FirstName" type="text" id="txtFirstName" name="FirstName" /></td>
            </tr>
            <tr>
                <td>Last Name:</td>
                <td><input asp-for="LastName" type="text" id="txtLastName" name="LastName" /></td>
            </tr>
            <tr>
                <td>Phone Number:</td>
                <td><input asp-for="PhoneNumber" type="tel" id="txtPhoneNumber" name="PhoneNumber" /></td>
            </tr>
            <tr>
                <td>E-Mail:</td>
                <td><input asp-for="EMail" type="email" id="txtEMail" name="EMail" /></td>
            </tr>
            <tr>
                <td>Hourly Rate In USD:</td>
                <td><input asp-for="HourlyRate" type="number" id="txtHourlyRate" name="HourlyRate" /></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <button class="btn btn-primary" type="submit" value="Submit" />
                    Submit Changes
                </td>
                <td>
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal"
                            data-bs-target="#deleteEmployee">
                        Delete
                    </button>
                </td>
            </tr>
        </table>
    </form>

    <!--Pop-Up 'Delete Employee Modal'-->
    <div class="modal fade" id="deleteEmployee" tabindex="-1" aria-labelledby="deleteEmployeeLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteEmployeeLabel">Delete Employee</h5>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete @Model.FullName?<br>THIS ACTION CANNOT BE UNDONE.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                    <a type="button" class="btn btn-danger" asp-controller="Employee" asp-action="DeleteEmployee"
                       asp-route-id="@Model.EmployeeId">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>